{
  "manifest_version": 3,
  "name": "Cookie-Detector",
  "version": "1.0",
  "description": "Work in progress, But rest of the description goes here ***",
  "action": {
    "default_icon": {
      "16": "Image.png",
      "48": "Image.png",
      "128": "Image.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["popup.js"]
    }
  ],
  "icons": {
    "16": "Image.png",
    "32": "Image.png",
    "48": "Image.png",
    "64": "Image.png",
    "128": "Image.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "cookies",
    "permissions",
    "activeTab",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "testcookie.js"
  },
  "host_permissions": [
    "https://*/*"
  ]
}
